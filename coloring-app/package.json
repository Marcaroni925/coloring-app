{
  "name": "coloring-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:fast": "vitest --coverage --run --reporter=minimal",
    "test:coverage:report": "node test-coverage.js",
    "test:coverage:visual": "node generate-visual-coverage.js",
    "test:coverage:full": "npm run test:coverage:report && npm run test:coverage && npm run test:e2e:fast && npm run test:integration",
    "test:network": "vitest run e2e/performance.e2e.test.js --reporter=verbose",
    "test:generation": "vitest run e2e/performance.e2e.test.js --grep='generation' --reporter=verbose",
    "test:bulk-3g": "vitest run e2e/gallery-bulk-operations.e2e.test.js -t '3G' --reporter=verbose",
    "test:extreme": "vitest run e2e/gallery-bulk-operations.e2e.test.js -t 'Extreme' --reporter=verbose",
    "test:pdf-export": "npm run test:coverage:visual",
    "test:e2e": "vitest run e2e --reporter=verbose",
    "test:e2e:fast": "vitest run e2e --reporter=minimal --pool=threads",
    "test:e2e:accessibility": "vitest run e2e/accessibility.e2e.test.js --reporter=verbose",
    "test:e2e:gallery": "vitest run e2e/gallery-bulk-operations.e2e.test.js --reporter=verbose",
    "test:integration": "dotenv-cli -e .env.test vitest run server/__tests__/openai-integration.test.js --reporter=verbose",
    "test:integration:fast": "dotenv-cli -e .env.test vitest run server/__tests__/openai-integration.test.js --reporter=minimal",
    "test:all": "npm run test && npm run test:e2e && npm run test:integration",
    "test:all:fast": "npm run test:coverage:fast && npm run test:e2e:fast && npm run test:integration:fast",
    "test:performance": "vitest --config vitest.performance.config.js",
    "test:performance:watch": "vitest --config vitest.performance.config.js --watch",
    "test:real-images": "TEST_REAL_IMAGES=true npm run test:e2e",
    "test:watch": "vitest --watch",
    "test:api": "vitest run server/__tests__ --exclude=server/__tests__/openai-integration.test.js",
    "test:accessibility": "npm run test:e2e:accessibility",
    "server": "node server/index.js",
    "start": "npm run server",
    "test:backend": "node test-backend.js"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-validator": "^7.0.0",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.525.0",
    "openai": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "axe-puppeteer": "^1.1.1",
    "dotenv-cli": "^9.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "puppeteer": "^23.10.4",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
