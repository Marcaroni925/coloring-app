# Test Environment Configuration
# Copy this file to .env.test.local and add your actual API keys for integration testing

# OpenAI API Configuration (optional - integration tests will skip if not provided)
OPENAI_API_KEY=your_openai_api_key_here

# Test Environment URLs
E2E_BASE_URL=http://localhost:5173
E2E_API_URL=http://localhost:3001

# Firebase Test Configuration (optional)
VITE_FIREBASE_API_KEY=test-api-key
VITE_FIREBASE_AUTH_DOMAIN=test-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=test-project
VITE_FIREBASE_STORAGE_BUCKET=test-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Test Configuration
NODE_ENV=test
VITEST=true

# Performance Test Thresholds
MAX_RESPONSE_TIME_MS=10000
MAX_IMAGE_GENERATION_TIME_MS=45000
MAX_PROMPT_REFINEMENT_TIME_MS=15000

# Accessibility Test Configuration
A11Y_WCAG_LEVEL=AA
A11Y_TEST_TIMEOUT=30000

# Rate Limiting Test Configuration
RATE_LIMIT_TEST_REQUESTS=5
RATE_LIMIT_WINDOW_MS=60000